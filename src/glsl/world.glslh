struct Vertex {
	vec4 position;
	vec4 normal;
	vec4 color;
};

layout(set = 0, binding = 0) uniform World {
	mat4 view;
	mat4 projection;
	mat4 viewProjection;
	vec4 lightPosition;
	vec4 lightColor;
	vec4 ambientColor;
} world;

layout(std430, set = 0, binding = 1) readonly buffer Vertices {
	Vertex data[];
} vertices;
